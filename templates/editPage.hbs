{{> header}}
<section class="notifications" style="display: none;">
    <p class="notification-message" id="errorBox">Message...</p>
</section>
<section class="notifications" style="display: none;background-color:rgba(1, 131, 29, 0.541);">
    <p class="notification-message" id="successBox">Message...</p>
</section>
<img src="../images/headImage4.jpg" class="img-fluid" alt="Head books image">
<form class="text-center border border-light p-5 col-md-6 loginRegisterForm" action="#/edit/{{book.id}}" method="POST">
    <h1>Edit Book Information</h1>
    <div class="form-group">
        <label for="title">Book Title</label>
        <input type="text" class="form-control" placeholder="Title" name="title" value="{{book.title}}" required>
    </div>
    <div class="form-group">
        <label for="title">Author</label>
        <input type="text" class="form-control" placeholder="Author" name="author" value="{{book.author}}" required>
    </div>
    <div class="form-group">
        <label for="description">Book Description</label>
        <textarea class="form-control" placeholder="Description" name="description" required>{{book.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="description">Book Genre</label>
        <input type="text" class="form-control" placeholder="Genre" name="genre" value="{{book.genre}}" required>
    </div>
     <div class="form-group">
        <label for="description">Book Pages</label>
        <input type="text" class="form-control" placeholder="Pages" name="pages" value="{{book.pages}}" required>
    </div>
    <div class="form-group">
        <label for="imageUrl">Image url</label>
        <input type="text" class="form-control" placeholder="Image Url" name="imageUrl" value="{{book.imageUrl}}" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
