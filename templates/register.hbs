{{> header}}
<section class="notifications" style="display: none;">
    <p class="notification-message" id="errorBox">Message...</p>
</section>
<section class="notifications" style="display: none;background-color:rgba(1, 131, 29, 0.541);">
    <p class="notification-message" id="successBox">Message...</p>
</section>
<img src="../images/headImage4.jpg" class="img-fluid" alt="Head books image">
<h1 class="text-center">Register</h1>
<form class="border border-light p-5 col-md-6 loginRegisterForm" action="/register" method="POST">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" placeholder="Email" name="email" value="" required>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password" value="" required>
    </div>

    <div class="form-group">
        <label for="repeatPassword">Repeat Password</label>
        <input type="password" class="form-control" placeholder="Repeat-Password" name="repeatPassword" value="" required>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
